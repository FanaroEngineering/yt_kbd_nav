{
  "manifest_version": 3,
  "name": "YT Kbd Nav",
  "author": "Philippe Fanaro",
  "version": "0.0.1",
  "description": "YouTube keyboard navigation to the max.",
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "exclude_matches": ["*://*.studio.youtube.com/*"],
      "js": ["content.js"]
    }
  ],
  "options_ui": {
    "page": "/pages/options.html",
    "open_in_tab": true
  }
}
