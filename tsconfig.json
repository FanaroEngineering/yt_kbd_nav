{
    "include": [
        "src",
    ],
    "compilerOptions": {
        "target": "ES2020",
        "module": "ESNext",
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable"
        ],
        /****************/
        /* Bundler Mode */
        /****************/
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "experimentalDecorators": true,
        "noEmit": true,
        /***********/
        /* Linting */
        /***********/
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
}